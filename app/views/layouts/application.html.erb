<!DOCTYPE html>
<html>
<head>
  <title>MyApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag params[:controller] %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag params[:controller] %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">
  <div id="header">
    <div id="header-wrapper">
      <div id="main-menu">
        <div class="main-menu-item home-icon" onclick="javascript:window.location='/'"><a href="/">Главная</a></div>
        <div class="main-menu-item task-icon"><a href="/tasks">Задачи</a></div>
        <div class="main-menu-item project-icon"><a href="/projects">Проекты</a></div>
        <div class="main-menu-item users-icon"><a href="/users">Пользователи</a></div>
      </div>
      <div id="user-info-box">
        <div class="user-info-text">
          <%= current_user() %>
          <%= link_to 'Выйти', login_url, method: :delete %>
        </div>
        <div class="user-info-img"></div>
      </div>
    </div>
  </div>
  <div id="body-wrapper"><%= yield %></div>
</div>
<div id="footer"></div>
</body>
</html>