<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Owner</th>
    <th>Performer</th>
    <th>Title</th>
    <th>Content</th>
    <th>Active</th>
    <th>Publish</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.project_id %></td>
    <td><%= task.owner_id %></td>
    <td><%= task.performer_id %></td>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.active %></td>
    <td><%= task.publish %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

