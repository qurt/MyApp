<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, 'error') %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<fieldset>
  <div class="form-group">
    <%= label_tag 'Проект' %>
    <% project_id = @task.project_id %>
    <% if params[:project_id] %>
    <% project_id = params[:project_id].to_i %>
    <% end %>
    <%= select_tag('task[project_id]', options_for_select(getSelectProjectList(), project_id), class: 'form-control') %>
  </div>
  <%= hidden_field_tag('task[owner_id]', session[:user_id]) %>
  <div class="form-group">
    <%= f.label 'Исполнители' %>
    <% performer_id = @task.performer_id %>
    <%= select_tag('task[performer_id]', options_for_select(getSelectUsersList(), performer_id), class: 'form-control') %>
  </div>
  <div class="form-group">
    <%= f.label 'Название' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Подробное описание' %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group" id="subtasks_field">
    <%= label_tag('subtask_title', 'Подзадачи') %> <br />
    <div class="subtask_item_box">
    <% if @task.subtasks.any? %>
      <% @task.subtasks.each do |subtask| %>
        <div class="subtask_item">
          <%= text_field_tag('subtask_title[]', subtask.title, class: 'form-control') %>
          
        </div>
        <div class="btn btn-danger">Удалить</div>
        <div style="clear:both;"></div>
      <% end %>
    <% end %>
    <%= text_field_tag('subtask_title[]','', class: 'form-control') %>
    <div style="clear:both;"></div>
    </div>
    
    <div class="btn btn-success">Добавить</div>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-default' %>
    <div class="btn btn-default"><%= link_to 'Назад', feed_path %></div>
  </div>
</fieldset>
<% end %>
