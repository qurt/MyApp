<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<div class="task_project_name"><%= link_to @task.project.name, @task.project %></div>
<div class="task_right_arrow"></div>
<div class="task_title"><%= @task.title %></div>

<div style="clear:both; margin-bottom: 10px;"></div>

<div class="field_wrapper">
  <div class="field_title">
    <% if @task.users.count > 1 %>
    Исполнители:
    <% else %>
    Исполнитель
    <% end %>
  </div>
  <div class="field_content">
    <% @task.users.each do |user| %>
    <p><%= user.name %></p>
    <% end %>
  </div>
</div>

<div class="field_wrapper">
  <div class="field_title">Описание:</div>
  <%= @task.content %>
</div>

<p> 
  <b>Active:</b>
  <%= @task.active %>
</p>
<p>
  <b>Подзадачи</b> <br />
  <% @task.subtasks.each do |subtask| %>
    <% checked = false %>
    <% if subtask.active == false %>
      <% checked = true %>
    <% end %>
    <%= check_box_tag('subtask', subtask.id, checked) %><%= label_tag('subtask', subtask.title) %> <br />
  <% end %>
</p>
<div class="discuss_box">
  <div class="messages_list">
    <% @task.discussions.each do |message| %>
    <div class="item">
      <div class="user_name"><%= message.user.name %></div>
      <div class="date"><%= message.create_at %></div>
      <div class="message"><%= message.message %></div>
    </div>
    <% end %>
  </div>
</div>
<% if @task.owner_id == session[:user_id] %>
<%= link_to 'Edit', edit_task_path(@task) %> |
<% end %>
<%= link_to 'Back', tasks_path %>