<p id="notice"><%= notice %></p>
<div class="task_project_name"><%= @task.project.name %> -> <%= @task.title %></div>

<p>
  <b>Исполнители:</b>
  <% @task.users.each do |user| %>
    <p><%= user.name %></p>
  <% end %>
</p>

<p>
  <b>Описание:</b>
  <%= @task.content %>
</p>

<p>
  <b>Active:</b>
  <%= @task.active %>
</p>
<p>
  <b>Подзадачи</b> <br />
  <% @task.subtasks.each do |subtask| %>
    <% checked = false %>
    <% if subtask.active == false %>
      <% checked = true %>
    <% end %>
    <%= check_box_tag('subtask', subtask.id, checked) %><%= label_tag('subtask', subtask.title) %> <br />
  <% end %>
</p>

<% if @task.owner_id == session[:user_id] %>
<%= link_to 'Edit', edit_task_path(@task) %> |
<% end %>
<%= link_to 'Back', tasks_path %>