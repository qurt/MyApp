<div id="top_add_button"><%= link_to 'Новый проект', new_project_path %></div>
<p id="notice"><%= notice %></p>
<div class="project_list">
<% @projects.each do |project| %>
<div class="project_item">
  <div class="project_title"><%= link_to project.name, project %> | Выполнено: <%=inactiveTaskCount(project.id)%> из <%=TaskCount(project.id)%></div>
  <% if project.owner_id == @user_id %>
  <div class="project_left_arrow"></div>
  <div class="project_control">
    <%= link_to 'Редактировать', edit_project_path(project) %> | <%= link_to 'Удалить', project, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <% end %>
</div>
<% end %>
</div>